<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GroupProject.RegisterPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            
            <Label Text="Username:"/>
            <Entry x:Name="usernameEntry" Placeholder="enter username"/>
            <Label Text="Password:"/>
            <Entry x:Name="passwordEntry" IsPassword="True" Placeholder="enter password"/>
            <Label Text="Confirm password:"/>
            <Entry x:Name="confirmPasswordEntry" IsPassword="True" Placeholder="confirm password"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" >
                <Button x:Name="cancelRegister" Text="Cancel" Clicked="cancelRegister_Clicked"/>
                <Button x:Name="confirmRegister" Text="Register" Clicked="confirmRegister_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>